{
  "manifest_version": 2,
  "name": "VistaSearch",
  "version": "1.0",
  "description": "Highlight and right click to Vista Search!",
  "icons": {
    "128": "icon128.png",
    "48": "icon48.png",
    "16": "icon16.png"
  },
  "browser_action": {
    "default_icon": "icon16.png"
  },

  "background": {
    "scripts": ["eventPage.js"],
    "persistent": false
  },

  "options_page": "",

  "permissions": [
    "contextMenus",
    "tabs"
  ]
}
